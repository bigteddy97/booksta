<%= form_for [@book,@chapter], :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group<%= " error" unless ! @chapter.errors[:title].any? %>">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group<%= " error" unless ! @chapter.errors[:content].any? %>">
    <%= f.label :content, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class => 'tinymce', :rows => 40, :cols => 120 %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                book_path(@chapter.book), :class => 'btn' %>
  </div>
<% end %>
