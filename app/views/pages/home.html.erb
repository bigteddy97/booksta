<div class="row">
	<div class="span12">
		<div class="hero-unit">
			<h1>booksta</h1>
			<p>
				<%= t 'page.homepage.text'%>
			</p>
			<% if !user_signed_in? %>
			<div class="pull-right">			
					<%= link_to t('user.sign_in'), new_user_session_path , :class=>"btn btn-primary btn-large" %>			
					<%= link_to t('user.sign_up'), new_user_registration_path, :class=>"btn btn-primary btn-large" %>
			</div>
			<% end %>
		</div>
	</div>

</div>

<div class="row">
	<div class="span6">
		<h2><%= t 'book.newest' %>:</h2>
		<ul>
			<% @newBooks.each do |book|%>
			<li><h2><%= link_to book.title, book %></h2></li>
			<% end %>
		</ul>
	</div>
	<div class="span6">
		<h2><%= t 'user.newest' %>:</h2>
		<ul>
			<% @newUsers.each do |user|%>
			<li><h2><%= link_to user.username, user %></h2></li>
			<% end %>
		</ul>
	</div>
</div>