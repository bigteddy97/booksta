<div class="page-header">

<h1>Change your password</h1>
	</div>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "New password", :class => 'control-label' %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, "Confirm new password" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Change my password", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "links" %>