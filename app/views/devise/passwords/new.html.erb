<div class="page-header">

<h1>Forgot your password?</h1>
</div>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post,  :class => 'form-horizontal' }) do |f| %>

  	<div class="control-group"><%= f.label(:email, t('user.email'), :class => 'control-label') %><div class="controls">
  <%= f.email_field :email %></div></div>

   <div class="form-actions"><%= f.submit "Send me reset password instructions", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "links" %>