<div class="page-header">

<h1>Sign in</h1>
</div>

<%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'} do |f| %>
	<div class="control-group">		
  		<%= f.label :username, t('user.name'), :class => 'control-label'%>
 		<div class="controls">
  			<%= f.text_field :username, :class => 'text_field' %>
		</div>
	</div>
	
  	<div class="control-group">
  		<%= f.label :password, t('user.password'), :class => 'control-label'%>
		<div class="controls">
  			<%= f.password_field :password, :class => 'password_field' %>
		</div>
	</div>

  <div class="form-actions">
	<%= f.submit t('user.sign_in'), :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "links" %>