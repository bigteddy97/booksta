<div class="page-header">
	<% if current_user == @user %>
	<div class="pull-right">
		<div class="alert alert-info"><strong>Hint:</strong> Edit your about by clicking on it!</div>
	</div>
	<% end %>
	<h1>
		<%= @user.username %>
	</h1>

</div>
<div class="row">
	<div class="span2">
		<div class="thumbnail">
			<%= image_tag @user.gravatar_url(:size => 150) %>
		</div>
	</div>
	<div class="span10">
		<div class="row">
			<div class="span12">
				<p><%= best_in_place_if current_user == @user, @user, :about, :type => :textarea %></p>
			</div>
			<div class="span12">
				<h2>Books:</h2>
				<ul>
					<% @books.each do |book| %>
						<li><h3><%= link_to book.title, book %></h3></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
</div>
